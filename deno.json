{
  "name": "@stefanlegg/markdown-slots",
  "version": "0.1.5",
  "license": "MIT",
  "exports": {
    ".": "./src/mod.ts",
    "./cli": "./cli.ts",
    "./mcp": "./src/mcp.ts"
  },
  "tasks": {
    "dev": "deno run --watch src/mod.ts",
    "test": "deno test --allow-read --allow-write --allow-run tests/",
    "test:watch": "deno test --allow-read --allow-write --watch tests/",
    "fmt": "deno fmt",
    "fmt:check": "deno fmt --check",
    "lint": "deno lint",
    "check": "deno check src/mod.ts cli.ts src/mcp.ts",
    "build": "deno run -A build.ts",
    "publish": "deno publish"
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": true,
    "proseWrap": "preserve",
    "exclude": [
      "**/*.md"
    ]
  },
  "lint": {
    "rules": {
      "tags": [
        "recommended"
      ]
    }
  },
  "compilerOptions": {
    "lib": [
      "deno.window"
    ],
    "strict": true
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@^1.0.14",
    "@std/cli": "jsr:@std/cli@^1.0.22",
    "@std/path": "jsr:@std/path@^1.1.2",
    "@modelcontextprotocol/sdk": "npm:@modelcontextprotocol/sdk@^1.0.0"
  }
}
